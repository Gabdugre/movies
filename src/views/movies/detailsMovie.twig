{% extends '/layouts/public.twig' %}
{% block title %}Détails du film {{ movie.title}}{% endblock %}

{% block content %}
<div id="details-movie">
<div class="col">
    <h1 class="title-main">{{ movie.title }}</h1>
    <p>{{ movie.synopsis }}</p>

    <ul>
    <li>Date de sortie : {{ movie.date|date('d/m/Y') }} </li>
    <li>Durée : {{ movie.duration|date('H:i:s')}}</li>
    <li class="notePress">Note de la presse : {{ movie.notePress}} / 10</li>
    </ul>
    </div>
    <div class="col">
        <img src="/images/le-monde-de-nemo.jpg" alt="{{ movie.title }}">
    </div>
</div>
    {% endblock %}